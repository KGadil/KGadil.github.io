---
import Layout from '../../layouts/Layout.astro'
import '../../styles/global.css'

export function getStaticPaths() {
    return [
        { params: { card: 'shop' } },
        { params: { card: 'pizza' } },
        { params: { card: 'admin' } },
        { params: { card: 'football' } },
    ]
}

const { card } = Astro.params
---

<Layout>
    <main class="main">
        <span class="projects_title">my projects</span>
        <div class="projects_container">
            <div class="projects_section">
                <div class="project card_1">
                    online shop
                    <p class="description">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Maxime excepturi ex id omnis inventore
                        voluptatem! js tsx
                    </p>
                    <a class="check" href=`/projects/${card}`>check more</a>
                    <span class="number">1</span>
                </div>
            </div>
            <div class="projects_section">
                <div class="project card_1">
                    pizza
                    <p class="description">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Maxime excepturi ex id omnis inventore
                        voluptatem!
                    </p>
                    <a class="check" href="/projects/pizza">check more</a>
                    <span class="number">2</span>
                </div>
            </div>
            <div class="projects_section">
                <div class="project card_1">
                    admin ui
                    <p class="description">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Maxime excepturi ex id omnis inventore
                        voluptatem!
                    </p>
                    <a class="check" href="/projects/admin">check more</a>
                    <span class="number">3</span>
                </div>
            </div>
            <div class="projects_section">
                <div class="project card_1">
                    case control
                    <p class="description">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Maxime excepturi ex id omnis inventore
                        voluptatem!
                    </p>
                    <a class="check" href="/projects/football">check more</a>
                    <span class="number">4</span>
                </div>
            </div>
        </div>
        <a class="back" href="/">go back</a>
    </main>
</Layout>

<style lang="scss">
    .projects_title {
        font-family: 'Abril Fatface';
        font-size: 3.5rem;
        margin-bottom: 20px;
    }

    .back {
        font-family: 'Abril Fatface';
        color: rgb(0, 0, 0);
        text-decoration: none;
        margin-top: 30px;
    }

    .main {
        display: flex;
        align-items: center;
        flex-direction: column;
        background: rgb(237, 237, 237);
        border-radius: 1rem;
        box-shadow: 0px 0px 46px 22px rgba(216, 230, 241, 0.2);
        padding: 2rem 2rem;
        height: 570px;
        margin: 1rem;
        .projects_container {
            position: relative;
            display: flex;
            flex-direction: column;
            overflow-y: scroll;
            &::-webkit-scrollbar {
                display: none;
            }
            .projects_section {
                display: flex;
                flex-wrap: wrap;
                margin-bottom: 20px;
                .project {
                    position: relative;
                    display: flex;
                    flex-direction: column;
                    width: 300px;
                    height: 185px;
                    font-family: 'Urbanist';
                    font-size: 2rem;
                    font-weight: 600;
                    background: white;
                    box-shadow: 4px 4px 8px 0px rgba(34, 60, 80, 0.2);
                    color: rgb(0, 0, 0);
                    text-decoration: none;
                    border-radius: 10px;
                    padding: 1rem;
                    .description {
                        font-size: 13px;
                        text-align: left;
                    }
                    .check {
                        font-size: 1rem;
                        color: rgb(0, 0, 0);
                        text-decoration: underline;
                    }
                    .number {
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        position: absolute;
                        right: 20px;
                        font-size: 1.2rem;
                        border: 2px solid black;
                        border-radius: 100%;
                        width: 22px;
                        height: 22px;
                    }
                }
            }
        }
    }
</style>
